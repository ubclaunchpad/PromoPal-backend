{
  "name": "foodies-backend",
  "version": "1.0.0",
  "description": "Finding the best restaurant promotions and deals while supporting local üçî",
  "main": "src/main/Index.ts",
  "scripts": {
    "build": "tsc --project ./",
    "prestart": "yarn run build",
    "start": "nodemon src/main/Index.ts",
    "test": "jest --verbose",
    "lint": "eslint . --ext .ts,.tsx",
    "lintFix": "eslint . --ext .ts,.tsx --fix",
    "prettier": "prettier --write .",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "dropSchema": "yarn run typeorm schema:drop",
    "syncSchema": "yarn run typeorm schema:sync",
    "loadSqlData": "psql -d foodies -f src/main/resources/init_data.sql --username=postgres",
    "run_migration": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "revert_migration": "ts-node ./node_modules/typeorm/cli.js migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ubclaunchpad/foodies/issues"
  },
  "homepage": "https://github.com/ubclaunchpad/foodies#readme",
  "dependencies": {
    "@firebase/app-types": "0.6.1",
    "@googlemaps/google-maps-services-js": "3.1.16",
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/node-geocoder": "^3.24.1",
    "@types/redis": "^2.8.28",
    "@types/redis-mock": "^0.17.0",
    "@types/request-promise": "^4.1.47",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.4.2",
    "firebase-mock": "^2.3.2",
    "joi": "^17.3.0",
    "node-geocoder": "^3.27.0",
    "redis": "^3.0.2",
    "redis-mock": "^0.56.3",
    "request": "^2.34",
    "request-promise": "^4.2.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.2",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "axios-mock-adapter": "1.19.0",
    "body-parser": "^1.19.0",
    "eslint": "7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "4.3.8",
    "jest": "^26.6.3",
    "joi": "^17.3.0",
    "lint-staged": "10.5.3",
    "nodemon": "^2.0.6",
    "pg": "^8.4.2",
    "prettier": "2.2.1",
    "query-string": "^6.13.7",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typeorm": "^0.2.28",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lintFix",
      "yarn prettier"
    ]
  }
}
